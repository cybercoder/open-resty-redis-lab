# Redis connection parameters
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CONNECT_TIMEOUT=1000
REDIS_READ_TIMEOUT=1000
REDIS_WRITE_TIMEOUT=1000
REDIS_POOL_SIZE=200
REDIS_POOL_IDLE_TIMEOUT=60000
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_CHANNEL=route_changes
REDIS_BATCH_SIZE=100

# Cache settings
CACHE_TTL=60
CACHE_NEG_TTL=5
ENABLE_STALE_CACHE=true
STALE_CACHE_TTL=300
ROUTE_TTL=2592000

# Shared dictionary sizes
DNS_CACHE_SIZE=10m
ROUTE_CACHE_SIZE=20m
CACHE_INVALIDATION_SIZE=1m
ROUTE_STATS_SIZE=10m

# Worker settings
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=4096
WORKER_RLIMIT_NOFILE=65535

# Connection pool settings
LUA_SOCKET_POOL_SIZE=200
LUA_SOCKET_KEEPALIVE_TIMEOUT=60s

# Proxy cache settings
PROXY_CACHE_PATH=/disk-cache
PROXY_CACHE_KEYS_ZONE_SIZE=100m
PROXY_CACHE_INACTIVE=7d
PROXY_CACHE_MAX_SIZE=10g

# DNS settings
DNS_SERVERS=8.8.8.8,8.8.4.4
DNS_RETRANS=5
DNS_TIMEOUT=2000